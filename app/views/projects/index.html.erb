<div class="projects-box">
  <div class="project-types-categories">
    <div class="project-types">
      <ul>
        <li><h5>Project types</h5></li>
        <li><strong><%= link_to "All Project Types" %></strong></li>
        <% @project_types.each do |type| %>
          <li>
            <strong>
              <%= link_to ("#{image_tag type.icon_path, size: '18x18'}" + " #{type.name}").html_safe %>
            </strong>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="project-categories">
      <ul>
        <li><h5>Categories</h5></li>
        <li><strong><%= link_to "All categories", filter_projects_path("All Categories") %></strong></li>
        <li><strong><%= link_to "Recent Projects", filter_projects_path("Recent Projects") %></strong></li>
      </ul>
    </div>
  </div>
  <div class="project-list">
    <h3><%= @type_filter + " - " + @category_filter %></h3>

    <div class="container-fluid margin-top-30">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Project</th>
            <th>Key</th>
            <th>Project Type</th>
            <th>Project Lead</th>
            <th>Project Category</th>
            <th>URL</th>
          </tr>
        </thead>

        <% @projects.each do |project| %>
          <tr>
            <td></td>
            <td><%= project.name %></td>
            <td><%= project.key %></td>
            <td><%= ("#{image_tag project.project_type.icon_path, size: '18x18'}" + " #{project.project_type.name}").html_safe %></td>
            <td>Project lead</td>
            <td>No Category</td>
            <td><%= project.url %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>